<div class="jumbotron">
  <h1 class="display-4">Profil utilisateur de:</h1>
  <h1 class="display-4"><%= @user.first_name%> <%= @user.last_name%></h1>
  <p class="lead"><%= @user.description%></p>
  <p>Clique pour crééer un événement</p>
  <%=link_to "Créer un événement", new_event_path, class: "btn btn-primary btn-lg" %>
  <%=link_to "Changer ton mot de passe", edit_user_registration_path, class: "btn btn-primary btn-lg" %>
	<%if current_user.is_admin? %>
		<%=link_to "Accès admin", admin_users_path, class: "btn btn-warning btn-lg" %>
	<%end%>
</div>

<div class="container d-flex justify-content-center">
	<div class="row">
		<div class="col-sm-12 d-flex justify-content-center m-3">
			<h2>Ce que je sais de <%=@user.first_name %> <%=@user.last_name %></h2>
		</div>
		<div class="col-sm-12 d-flex justify-content-center">
			<table class="table table-bordered">
			  <thead>
			    <tr>
			      <th scope="col">First name</th>
			      <th scope="col">Last name</th>
			      <th scope="col">Email address</th>
			    </tr>
			  </thead>
			  <tbody>
			    <tr>
			      <td><%=@user.first_name %></td>
			      <td><%=@user.last_name %></td>
			      <td><%=@user.email %></td>
			    </tr>
			    <tr>
			  </tbody>
			</table>
		</div>
		<div class="col-sm-12 d-flex justify-content-center">
			<%= link_to edit_user_registration_path(id: @user.id) do %>
			<button class="btn btn-icon btn-3 btn-primary" type="button">
				<span class="btn-inner--icon"><i class="ni ni-bag-17"></i></span>
			   <span class="btn-inner--text">Editer mes informations</span>
			</button>
			<%end%>
		</div>
	</div>
</div>

<div class="container d-flex justify-content-center">
	<div class="row">
		<div class="col-sm-12 d-flex justify-content-center m-3">
			<h2>Je suis inscrit aux events suivants</h2>
		</div>
		<div class="col-sm-12 d-flex justify-content-center">
			<table class="table table-bordered">
			  <thead>
			    <tr>
			      <th scope="col">Evénement</th>
			      <th scope="col">Page de l'événément</th>
			    </tr>
			  </thead>
			  <tbody>
			  	<% @user.events.each do |event| %>
			    <tr>
			      <td><%=event.title %></td>
			      <td><%= link_to 'Détail', event_path(event.id), class: 'btn btn-secondary bg-info' %></td>
			    </tr>
			    <tr>
			    <% end %>
			  </tbody>
			</table>
		</div>
	</div>
</div>

<div class="container d-flex justify-content-center">
	<div class="row">
		<div class="col-sm-12 d-flex justify-content-center m-3">
			<h2>Mes événements en tant qu'organisateur</h2>
		</div>
		<div class="col-sm-12 d-flex justify-content-center">
			<table class="table table-bordered">
			  <thead>
			    <tr>
			      <th scope="col">Evénement</th>
			      <th scope="col">Page de l'événément</th>
			    </tr>
			  </thead>
			  <tbody>
			  	<% @user_events.each do |event| %>
			    <tr>
			      <td><%=event.title %></td>
			      <td><%= link_to "Voir plus", event_path(event.id) %></td>
			    </tr>
			    <tr>
			    <% end %>
			  </tbody>
			</table>
		</div>
	</div>
</div>


<%if @user.avatar.attached?%>
  <%= image_tag @user.avatar, alt: 'avatar' %>
<%else%>
  <p>=== Il n'y a pas encore d'avatar lié à cet utilisateur ===</p>
<%end%>

<h3>Changer de photo de profil ?</h3>
<%= form_tag user_avatars_path(@user), multipart: true do %>
  <%= file_field_tag :avatar %>
  <%= submit_tag "Mettre à jour" %>
<% end %>