
<div class="container-fluid">
    <h1 class="text-center">Gestion des utilisateurs </h1>
    
    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>E-mail</th>
                <th>Inscrit le</th>
                <th>Mis-à-jour le</th>
                <th>Admin</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
        <% @users.each do |user|%>
            <tr>
                <td><%= user.last_name %></td>
                <td><%= user.first_name %></td>
                <td><%= user.email %></td>
                <td><%= user.created_at.strftime("%d %m %Y à %HH:%MM" ) %></td>
                <td><%= user.updated_at.strftime("%d %m %Y à %HH:%MM") %></td>
                <td>
                    <%= "Oui" if user.is_admin %>
                </td> 
                <td><%= link_to 'Infos',user_path(user.id),  class: "btn btn-info" %></td>
                <td><%= link_to 'Modifier', edit_user_registration_path(user.id), class: "btn btn-primary" %></td> 
                <td><%= link_to 'Supprimer',  method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>


 
